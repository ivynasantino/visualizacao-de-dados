{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ivynasantino/visualizacao-de-dados/master/cancoes/data/tom.csv",
    "format": {
      "type": "csv"
    }
  },
  "width": 500,
  "height": 300,
  "transform": [
    {
      "filter": {
        "field": "album_name",
        "oneOf": ["Lust For Life", 
                  "Ultraviolence", 
                  "Norman Fucking Rockwell!", 
                  "Honeymoon", 
                  "Ultraviolence", 
                  "Paradise", 
                  "Born To Die"]
      }
    }],
  "title": "Acordes e músicas tristes",
  "mark": {"type": "bar"},
  "encoding": {
    "y": {
      "field": "album_name",
      "type": "nominal",
      "title": "Nome da música"
    },
    "x": {
      "field": "tom",
      "type": "quantitative",
      "aggregate": "sum",
      "title": "Tom",
      "stack": "normalize"
    },
    "color": {"field": "mode_name", "type": "nominal"}
  }
}
